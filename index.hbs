{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">

    <div class="main-container">
        <div class="cover-side">
            <nav class="nav-drawer">
                {{#if @blog.navigation}}
                    <a class="nav-button" href="#"><span class="burger">&#9776;</span></a>
                {{/if}}
            </nav>
            <div class="cover-image {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}"></div>
            <div class="cover-container">
                {{#if @blog.logo}}
                  <a href="{{@blog.url}}" class="cover-logo" data-pjax>
                    <img src="{{@blog.logo}}" alt="Blog Logo">
                  </a>
                {{/if}}
                <ul class="cover-focuslist clearfix">
                    <li>
                        <a href="//github.com/SeptimusLiu"><i class="fa fa-github"></i></a>
                    </li>
                    <li>
                        <a href="//blog.sina.com.cn/septimus7"><i class="fa fa-weibo"></i></a>
                    </li>
                </ul>
                <h1 class="cover-title">{{@blog.title}}</h1>
                <p class="cover-description">{{@blog.description}}</p>
            </div>
        </div> 

        <div class="nav-container">
            <div class="wrapper-nav">
                 {{navigation}} 
            </div>
        </div>

        <section class="wrapper-posts-side">
            <div class="posts-side">
                {{! The tag below includes the post loop - partials/loop.hbs }}
                {{> "loop"}}

                {{> "footer"}}
                
            </div>
        </section>
    </div>

</main>
